{
  "compilerOptions": {
    "outDir": "./frontend/dist",
    "rootDir": "./frontend/scripts/",
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true
  },
  "include": [
    "frontend/scripts/raw/**/*.ts",
    "frontend/scripts/types.ts",
    "frontend/scripts/script.ts"
  ],
  "exclude": ["./frontend/scripts/compiled"]
}
